{
  "name": "strest",
  "version": "0.0.1",
  "description": "Stress tests",
  "main": "dist/index.js",
  "scripts": {
    "build-tests": "tsc -p tsconfig.test.json",
    "watch": "tsc --watch",
    "clean": "rimraf ./dist",
    "lint": "tslint src/**/*.ts",
    "prebuild": "npm run clean && npm run lint",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "cd dist && node gql-gen.js",
    "debug": "cd dist && node --inspect --debug-brk gql-gen.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "create-git-tag": "git tag $(cat package.json | $(npm bin)/json version)",
    "dev": "cd dist && nodemon --ext ts,js,d.ts dev-usage.js",
    "prepare": "npm run build && npm run test && npm run create-git-tag && git push && git push --tags",
    "test": "jest"
  },
  "keywords": [],
  "author": "Dotan Simha <dotansimha@gmail.com>",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.ts"
    ],
    "coverageDirectory": "./test/coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/test/jest.typescript.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$",
    "testEnvironment": "node"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "glob": "^7.1.1",
    "reflect-metadata": "^0.1.9",
    "request": "^2.79.0"
  },
  "devDependencies": {
    "@types/commander": "^2.3.31",
    "@types/glob": "^5.0.30",
    "@types/jest": "^16.0.1",
    "@types/mkdirp": "^0.3.29",
    "@types/node": "^6.0.54",
    "@types/request": "^0.0.37",
    "conventional-changelog": "^1.1.0",
    "cz-conventional-changelog": "^1.2.0",
    "jest": "^18.1.0",
    "nodemon": "^1.11.0",
    "rimraf": "^2.5.4",
    "tslint": "^4.0.2",
    "typescript": "^2.1.4"
  },
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  }
}
