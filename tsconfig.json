{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceRoot": "./",
    "types": [
      "@types/node",
      "rxjs"
    ]
  },
  "files": [
    "typings.d.ts",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
